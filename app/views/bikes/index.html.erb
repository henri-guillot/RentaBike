<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Tous les v√©los</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
        <p>All <%= Bike.count %> bikes.</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-md-4">
        <div class="bike-card">
          <div class="bike-card-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path bike.photo.key, height: 300, crop: :fill %>')">
          <div class="bike-card-content">
            <div class="bike-card-title">
              <h4><%= bike.name %></h4>
            </div>
            <p><%= bike.place %></p>
            <div class="flex">
              <div class="flex align-items-center">
                <i class="fa-solid fa-people-line"></i>
              </div>
              <div class="flex align-items-center ms-3">
                <i class="fa-solid fa-euro-sign"></i>
                <span><%= bike.price_per_day %></span>
              </div>
            </div>
          </div>
          <div class="bike-card-actions">
            <%= link_to "More info", bike_path(bike) %>
            <%= link_to "Edit", edit_bike_path(bike), class: "ms-3 text-warning" %>
            <%= link_to "Remove", bike_path(bike),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "ms-3 text-danger"
            %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
