<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Vélos à louer</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
        <p> <%= Bike.count %> vélos à proximité</p>
    </div>
  </div>

  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-6 py-3">
        <div class="card-bike">
          <%= cl_image_tag bike.photo.key %>
          <div class="card-bike-infos">
            <div>
              <h2><%= bike.name %></h2>
              <p><div class="flex align-items-center">
                <i class="fas fa-location"></i>
                <span><%= bike.place %></span>
              </div></p>
            </div>
            <h3 class="card-bike-pricing"><%= bike.price_per_day.to_i %> €</h3>
          </div>
        </div>
        </div>
      <% end %>
    </div>
</div>
