<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>Tous les v√©los</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
        <p>All <%= Bike.count %> bikes.</p>
    </div>
  </div>

  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-md-4">
        <div class="bike-card">
          <span><%= cl_image_tag bike.photo.key, height: 50, width: 50, crop: :fill %></span>
          <div class="bike-card-content">
            <div class="bike-card-title">
              <h4><%= bike.name %></h4>
            </div>
            <div class="flex">
              <div class="flex align-items-center">
                <i class="fas fa-location"></i>
                <span><%= bike.place %></span>
              </div>
              <div class="flex align-items-center">
                <i class="fa-solid fa-euro-sign"></i>
                <span><%= bike.price_per_day %></span>
              </div>
              <div class="flex align-items-center">
                <i class="fa-solid fa-person-biking"></i>
                <span><%= bike.bike_type %></span>
              </div>
            </div>
          </div>
          <div class="bike-card-actions">
            <%= link_to "More info", bike_path(bike) %>
            <%= link_to "Edit", edit_bike_path(bike), class: "ms-3" %>
            <%= link_to "Remove", bike_path(bike),
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: "ms-3"
            %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
